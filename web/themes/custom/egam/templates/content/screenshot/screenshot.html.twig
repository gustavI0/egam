{#
/**
 * @file
 * Default theme implementation to present a screenshot entity.
 *
 * This template is used when viewing a canonical screenshot page,
 *
 * Available variables:
 * - content: A list of content items. Use 'content' to print all content, or
 *   print a subset such as 'content.label'.
 * - attributes: HTML attributes for the container element.
 *
 * @see template_preprocess_screenshot()
 */
#}
<article{{ attributes }}>
  {% if view_mode != 'full' %}
    {{ title_prefix }}
    {{ title_suffix }}
  {% endif %}
  {% if content %}
      {% set date = content.field_game.0.entity %}
      {% set dev = content.field_game.entity.field_developer.value %}
      <div class="container flex content screenshot">
          <div class="cover basis-1/2 p-4">
              {{ content.field_cover }}
          </div>
          <div class="details basis-1/2 p-4">

              {% if content.field_game.0 %}
                  <div class="item game">
                      <h2>{{ 'Game'|t }}</h2>
                      {{ content.field_game }}
                  </div>
              {% endif %}

              {% if game_date %}
                  <div class="item date">
                      <h2>{{ 'Date'|t }}</h2>
                      {{ game_date }}
                  </div>
              {% endif %}

              {% if game_developer %}
                  <div class="item developer">
                      <h2>{{ 'Developer'|t }}</h2>
                      {{ game_developer }}
                  </div>
              {% endif %}

              {% if content.description.0 %}
                  <div class="item description">
                      <h2>{{ 'Notes'|t }}</h2>
                      {{ content.description }}
                  </div>
              {% endif %}

              {% if content.field_more_info.0 %}
                  <div class="item more_info">
                      <a href="{{ content.field_more_info.0 }}">{{ 'More info'|t }}</a>
                  </div>
              {% endif %}

          </div>
      </div>
      {% if content.field_artwork.0 %}
          <div class="related-content artwork">
              <h2>{{ 'Oeuvre(s) pr√©sente(s) dans cette image :'|t }}</h2>
              {{ content.field_artwork }}
          </div>
      {% endif %}
  {% endif %}
</article>
