{#
/**
 * @file
 * Theme implementation to present a game entity in teaser view.
 */
#}
<article{{ attributes.addClass('game', view_mode) }}>
    {% if view_mode != 'full' %}
        {{ title_prefix }}
        {{ title_suffix }}
    {% endif %}
    {% if content %}
        {{ include('egam:entity_teaser', {
            cover: content.field_cover,
            label: full_title|raw,
        }) }}
    {% endif %}
</article>
