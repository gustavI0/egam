{#
/**
 * @file
 * Theme implementation to present a museum entity in teaser view.
 */
#}
<article{{ attributes.addClass('museum', view_mode) }}>
    {% if view_mode != 'full' %}
        {{ title_prefix }}
        {{ title_suffix }}
    {% endif %}
    {% if content %}
        {{ include('egam:entity_teaser', {
            cover: content.field_cover,
            label: content.label,
        }) }}
    {% endif %}
</article>
